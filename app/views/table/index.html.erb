<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<h1><b>Sunday League Table</b></h1>

<table>

<thead>
	<tr>
		<th>Postion</th>
		<th>Team Name</th>
		<th>Points</th>
		<th colspan="8"></th>
	</tr>
</thead>

<tbody>
	<% @teams.order("losses").each_with_index do |team, index| %>
		<tr>
		  <td><%= index+1 %></td>	  	
		  <td><%= team.name %></td>
		  <td><%= team.points %></td>
		</tr>
<% end %>
</tbody>
</table>
